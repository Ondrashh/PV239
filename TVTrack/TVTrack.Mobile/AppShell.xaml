<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TVTrack.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TVTrack.Mobile"
    xmlns:views="clr-namespace:TVTrack.Mobile.Views"
    xmlns:vshows="clr-namespace:TVTrack.Mobile.Views.Shows"
    xmlns:fonts="clr-namespace:TVTrack.Mobile.Fonts"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab>
            <Tab.Icon>
                <FontImageSource Glyph="{Static fonts:FontAwesomeIcons.House}"
                             FontFamily="{Static fonts:Fonts.FontAwesome}"/>
            </Tab.Icon>
            <Tab.Title>
                Home
            </Tab.Title>
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="home" />
        </Tab>
        <Tab>
            <Tab.Icon>
                <FontImageSource Glyph="{Static fonts:FontAwesomeIcons.MagnifyingGlass}"
                             FontFamily="{Static fonts:Fonts.FontAwesome}"/>
            </Tab.Icon>
            <Tab.Title>
                Search
            </Tab.Title>
            <ShellContent
                Title="Search"
                ContentTemplate="{DataTemplate views:SearchView}"
                Route="search" />
        </Tab>
    </TabBar>
</Shell>

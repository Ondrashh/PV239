<?xml version="1.0" encoding="utf-8" ?>
<views:PopupBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TVTrack.Mobile.Views.Popup.AddSeasonPopup"
             xmlns:views="clr-namespace:TVTrack.Mobile.Views.Popup"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             VerticalOptions="End"
             HorizontalOptions="Fill">
    <VerticalStackLayout>
        <Grid BackgroundColor="White" HorizontalOptions="FillAndExpand">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label 
                TextColor="Black"
                Text="Welcome to .NET MAUI!"
                VerticalOptions="Center" 
                HorizontalOptions="FillAndExpand" />
        </Grid>
    </VerticalStackLayout>
</views:PopupBase>
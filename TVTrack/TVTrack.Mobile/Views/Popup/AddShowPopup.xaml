<?xml version="1.0" encoding="utf-8" ?>
<views:PopupBase
    x:Class="TVTrack.Mobile.Views.Popup.AddShowPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:views="clr-namespace:TVTrack.Mobile.Views.Popup"
    xmlns:vm="clr-namespace:TVTrack.Mobile.ViewModels.Shows"
    x:Name="Root"
    x:DataType="vm:AddShowViewModel"
    HorizontalOptions="Fill"
    VerticalOptions="End">
    <VerticalStackLayout>
        <Grid BackgroundColor="White" HorizontalOptions="FillAndExpand">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <Label
                Grid.Row="0"
                HorizontalOptions="FillAndExpand"
                Text="Welcome to .NET MAUI!"
                TextColor="Black"
                VerticalOptions="Center" />
            <Label
                Grid.Row="1"
                HorizontalOptions="FillAndExpand"
                Text="{Binding ID}"
                TextColor="Black"
                VerticalOptions="Center" />
        </Grid>
    </VerticalStackLayout>
</views:PopupBase>
<?xml version="1.0" encoding="utf-8" ?>
<views:PopupBase
    x:Class="TVTrack.Mobile.Views.Popup.AddShowPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:views="clr-namespace:TVTrack.Mobile.Views.Popup"
    xmlns:vm="clr-namespace:TVTrack.Mobile.ViewModels.Shows"
    x:Name="Root"
    x:DataType="vm:AddShowViewModel"
    HorizontalOptions="Fill"
    VerticalOptions="End">
    <Grid
        Padding="10,10,30,30"
        BackgroundColor="Black"
        HorizontalOptions="FillAndExpand"
        RowSpacing="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="65" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Label
                HorizontalTextAlignment="Center"
                StyleClass="Header"
                Text="Manage Show"
                VerticalTextAlignment="Center" />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="17" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="17" />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Row="0"
                Grid.ColumnSpan="3"
                HorizontalOptions="FillAndExpand"
                Text="{Binding Rating, StringFormat='Rating: {0}'}"
                VerticalOptions="Center" />
            <Label
                Grid.Row="1"
                Grid.Column="0"
                HorizontalTextAlignment="Center"
                Text="0"
                VerticalTextAlignment="Center" />
            <Slider
                Grid.Row="1"
                Grid.Column="1"
                Maximum="10"
                Minimum="0"
                VerticalOptions="Center"
                Value="{Binding Rating}" />
            <Label
                Grid.Row="1"
                Grid.Column="2"
                HorizontalTextAlignment="Center"
                Text="10"
                VerticalTextAlignment="Center" />

        </Grid>
        <Grid Grid.Row="2" Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="40" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Text="Watch Next" />
            <CheckBox Grid.Column="1" IsChecked="{Binding IsAddedToList}">
                <CheckBox.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ToggleDefaultListCommand}" />
                </CheckBox.GestureRecognizers>
            </CheckBox>
        </Grid>
        <Grid Grid.Row="3" Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="40" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Text="Receive Notifications" />
            <CheckBox Grid.Column="1" IsChecked="{Binding EnableNotifications}">
                <CheckBox.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ToggleNotificationsCommand}" />
                </CheckBox.GestureRecognizers>
            </CheckBox>
        </Grid>
        <Grid Grid.Row="4" Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="40" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Text="Add Premieres To Calendar" />
            <CheckBox Grid.Column="1" IsChecked="{Binding AddToCalendar}">
                <CheckBox.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ToggleCalendarCommand}" />
                </CheckBox.GestureRecognizers>
            </CheckBox>
        </Grid>
        <Grid Grid.Row="5" Margin="0,7">
            <Button Command="{Binding SaveShowDetailsCommand}" Text="Save" />
        </Grid>
    </Grid>
</views:PopupBase>
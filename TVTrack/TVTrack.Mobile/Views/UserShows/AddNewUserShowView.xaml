<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase
    x:Class="TVTrack.Mobile.Views.UserShows.AddNewUserShowView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fonts="clr-namespace:TVTrack.Mobile.Resources.Fonts"
    xmlns:m="clr-namespace:TVTrack.Models.TvMaze;assembly=TVTrack.Models.TvMaze"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:views="clr-namespace:TVTrack.Mobile.Views"
    xmlns:vm="clr-namespace:TVTrack.Mobile.ViewModels.UserShows"
    x:Name="Root"
    Title="Create New List"
    x:DataType="vm:EditUserShowViewModel">
    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Label
                Grid.Column="0"
                Padding="10,0"
                FontAttributes="Bold"
                FontSize="16"
                Text="New user list"
                VerticalOptions="Center" />
        </Grid>
        <Grid Grid.Row="1" Padding="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                Padding="10,0"
                Text="Name:"
                VerticalOptions="Center" />
            <Entry
                x:Name="nameEntry"
                Grid.Column="1"
                Placeholder="Enter name" />
        </Grid>
        <Grid Grid.Row="2" Padding="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                Padding="10,0"
                Text="Description:"
                VerticalOptions="Center" />
            <Entry
                x:Name="descriptionEntry"
                Grid.Column="1"
                Placeholder="Enter description" />
        </Grid>
        <Grid Grid.Row="3" Padding="10">
            <Button
                x:Name="submitButton"
                Clicked="OnButtonClicked"
                Text="Save" />
        </Grid>

    </Grid>
</views:ContentPageBase>